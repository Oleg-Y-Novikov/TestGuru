<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "TestGuru", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "About", "#{root_path}static_pages/about.html" %></li>
        <li><%= link_to "Author", "#{root_path}static_pages/author.html" %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.first_name %> account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", profile_path(current_user) %></li>
              <li><%= link_to "Settings", edit_user_registration_path %></li>
              
              <% if current_user.admin? %>
                <li class="divider"></li>
                <li><%= link_to "Admin Panel", admin_tests_path %></li>
              <% end %>

              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Language <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Russian", '?lang=ru' %></li>
            <li class="divider"></li>
            <li><%= link_to "English", '?lang=en' %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
