<h1><%= @test.title %></h1>

<div class="button_inline">
  <%= button_to t('admin.tests.show_all_tests'), admin_tests_path, method: :get, class: 'btn btn-primary' %>
</div>
<div class="button_inline">
  <%= button_to t('.create_question'), new_admin_test_question_path(@test),
                                                     method: :get, class: 'btn btn-primary' %>
</div>

<% if @test.questions.present? %>
  <h3><%= t('.all_questions') %></h3>

  <table class="table">
    <tr>
      <th><%= t('.question') %></th>
      <th colspan="3"><%= t('global.actions') %></th>
    </tr>
    <%= render @test.questions %>
  </table>

<% else %>
 <h3><%= t('.no_questions') %></h3>
<% end %>
