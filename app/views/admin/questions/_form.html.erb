<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: [:admin, @test, @question], local: true) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <p><%= f.label :body %></p>
      <p><%= f.text_area :body, class: 'form-control' %></p>
      <p><%= f.submit class: 'btn btn-primary btn-block' %></p>
    <% end %>
  </div>
</div>
