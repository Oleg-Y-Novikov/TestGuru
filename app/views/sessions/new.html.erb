<% provide(:title, t('page_sessions.log_in')) %>

<div class="center">
  <h1><%= t('page_sessions.log_in') %></h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <br>
      <%= f.submit t('page_sessions.log_in'), class: "btn btn-primary btn-block" %>
    <% end %>
    <p><%= t('page_sessions.new_user') %> <%= link_to t('page_sessions.sign_up'), signup_path %></p> 
  </div>
</div>
