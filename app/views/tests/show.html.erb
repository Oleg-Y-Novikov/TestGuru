<% provide(:title, t('page_questions.all_questions')) %>

<h1><%= @test.title %></h1>

<div class="button_inline">
  <%= button_to t('page_tests.show_all_tests'), tests_path, method: :get, class: 'btn btn-primary' %>
</div>
<div class="button_inline">
  <%= button_to t('page_questions.create_question'), new_test_question_path(@test), method: :get, class: 'btn btn-primary' %>
</div>

<% if @test.questions.present? %>
  <h3><%= t('page_questions.all_questions') %></h3>

  <table class="table">
    <tr>
      <th><%= t('page_questions.question') %></th>
      <th colspan="3"><%= t('global.actions') %></th>
    </tr>
    <%= render @test.questions %>
  </table>

<% else %>
 <h3><%= t('page_tests.no_questions') %></h3>
<% end %>
