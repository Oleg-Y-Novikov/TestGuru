<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @test, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <p>
        <%= f.label t('page_tests.title') %><br>
        <%= f.text_field :title, class: 'form-control' %>
      </p>

      <p>
        <%= f.label t('page_tests.level') %><br>
        <%= f.number_field :level, class: 'form-control' %>
      </p>

      <p>
        <%= f.label t('page_tests.category') %><br>
        <%= f.collection_select :category_id, Category.all, :id, :title, { prompt: true }, { class: 'form-control' } %>
      </p>

      <p><%= f.submit correct_button_title(object: @test), class: 'btn btn-primary btn-block' %></p>
    <% end %>
  </div>
</div>
